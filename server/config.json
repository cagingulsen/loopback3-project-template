{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 4000,
  "errorLogFileName": "PROJECTNAME-error.log",
  "infoLogFileName": "PROJECTNAME-info.log",
  "logDir": "../exampleProjectLogs",
  "logDatePattern": "/yyyy-MM-dd_HH_00/",
  "maxLogSize": 2048000,
  "maxLogFileNumber": 12,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false
  }
}
